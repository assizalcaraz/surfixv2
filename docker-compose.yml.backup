version: '3.9'
services:
  web:
    build:
      context: .
      dockerfile: docker/prod.Dockerfile
    env_file:
      - .env.prod
    depends_on:
      - db
    command: sh /app/entrypoint.sh
    volumes:
      - static_volume:/app/static

  db:
    image: postgres:14
    volumes:
      - postgres_data:/var/lib/postgresql/data/
    env_file:
      - .env.prod

  nginx:
    image: nginx:latest
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./docker/nginx/nginx.conf:/etc/nginx/nginx.conf
      - static_volume:/app/static
      - /etc/letsencrypt:/etc/letsencrypt:ro  # <--- nuevo volumen
    depends_on:
      - web

volumes:
  postgres_data:
  static_volume:
